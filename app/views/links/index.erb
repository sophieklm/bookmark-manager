<% if current_user %>
<p>Welcome to your bookmark manager, <%= @current_user.email%>!</p>
<form method='post' action='/sessions'>
  <input type='hidden' name='_method' value='delete'>
  <input type='submit' value='Sign out'>
</form>
<% end %>

<% if flash[:notice] %>
  <div id='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>

<h1> Links </h1>
<ul id='links'>
  <% @links.each do |link| %>
  <li>
    Title: <%= link.title %>
    URL: <%= link.url %>
    Tags:
    <% link.tags.each do |tag| %>
      <%= tag.tag %>
    <%end%>
  </li>
  <% end %>
</ul>
